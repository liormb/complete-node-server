<form
    class="product-form inline"
    action="/admin/product/<%= product._id || '' %>"
    method="POST"
    enctype="multipart/form-data"
>
    <%- include('../partials/error-message.ejs') %>
    <div class="form-control">
        <label for="title">Title</label>
        <input
            id="title"
            class="<%= validation && validation.title ? 'invalid' : ''%>"
            type="text"
            name="title"
            value="<%= product.title || '' %>"
        >
    </div>
    <div class="form-control">
        <label for="price">Price</label>
        <input
            id="price"
            class="<%= validation && validation.price ? 'invalid' : ''%>"
            type="number"
            step="0.01"
            name="price"
            value="<%= product.price || '' %>"
        >
    </div>
    <div class="form-control">
        <label for="image">Image</label>
        <input
            id="image"
            type="file"
            name="image"
        >
    </div>
    <div class="form-control">
        <label for="description">Description</label>
        <textarea
            id="description"
            class="<%= validation && validation.description ? 'invalid' : ''%>"
            name="description"
            rows="5"
        >
            <%= product.description || '' %>
        </textarea>
    </div>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <button class="btn" type="submit"><%= product._id ? 'Update' : 'Add' %> Product</button>
</form>